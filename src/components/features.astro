---
// @ts-ignore
import { Icon } from 'astro-icon/components';

const features = [
  {
    title: 'Supports 2D & 3D Laser Engraving on Any Surface',
    description: 'MarkingMate supports engraving on flat surfaces, while MarkingMate3D allows engraving on curved, tilted, cylindrical, and spherical objects without manual adjustment.',
    icon: 'bx:layer',
  },
  {
    title: 'Automatic Focus System (Auto Focus)',
    description: 'Ensures laser precision, optimizing speed and engraving quality on both flat and irregular surfaces without manual calibration.',
    icon: 'bx:target-lock',
  },
  {
    title: 'Integrated Rotary System & Mark On Fly',
    description: 'Supports rotary axis engraving, allowing continuous marking without stopping the machine â€” ideal for high-speed production lines.',
    icon: 'bx:rotate-right',
  },
  {
    title: '1D & 2D Barcode Support for Traceability',
    description: 'Supports industrial barcode standards such as Code 128, UPC, EAN, DataMatrix, and QR Code for direct marking on products to simplify tracking and management.',
    icon: 'bx:barcode',
  },
  {
    title: 'Geometric Distortion Compensation & Automatic Error Correction',
    description: 'Corrects distortions caused by curved or uneven surfaces using advanced algorithms like Grid Method, Scale Method, and Formula Correction (barrel, trapezoid, parallelogram).',
    icon: 'bx:shape-circle',
  },
  {
    title: 'Image Processing and Multi-Format File Support',
    description: 'Allows importing vector files (DXF, PLT, AI), images (BMP, PNG, PSD), and 3D models (STL, OBJ). Includes advanced filters like Sharpen, Emboss, and Edge Detection.',
    icon: 'bx:image',
  },
  {
    title: 'Optimized Interface with Quick Controls',
    description: 'Provides an intuitive control panel with features like I/O signal settings, delay setup, position check, homing, zoom, and laser power adjustment.',
    icon: 'bx:grid-alt',
  },
  {
    title: 'User Permission Management & System Security',
    description: 'Three-level access system: Operator, Programmer, Administrator. Ensures data security, prevents accidental changes, and provides complete machine operation control.',
    icon: 'bx:shield-alt-2',
  },
  {
    title: 'Multi-language Support & Interface Customization',
    description: 'Available in 12 languages including English, Chinese, German, Japanese, Korean, and Vietnamese. Users can customize the interface by editing the configuration file.',
    icon: 'bx:world',
  },
];
---

<div class='mt-16 md:mt-0'>
  <h2 class='text-4xl lg:text-5xl font-bold lg:tracking-tight'>MarkingMate & MarkingMate3D (MM3D)</h2>
  <p class='text-lg mt-4 text-slate-600'>Optimal performance, absolute precision, working seamlessly with both 2D and 3D.</p>
</div>

<div class='grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16'>
  {
    features.map((item) => (
      <div class='flex gap-4 items-start'>
        <div class='mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0'>
          <Icon
            class='text-white'
            name={item.icon}
          />
        </div>
        <div>
          <h3 class='font-semibold text-lg'>{item.title}</h3> <p class='text-slate-500 mt-2 leading-relaxed'>{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
