---
import Link from '@components/ui/link.astro';
import heroImage from 'assets/mm.jpg';
import { Icon } from 'astro-icon/components';
---

<main class='grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24'>
  <div class='py-6 md:order-1 hidden md:block w-full'>
    <img
      src={heroImage.src}
      alt='MarkingMate Logo'
      loading='lazy'
      class='rounded-lg'
      style='box-shadow: 10px 10px #eee;'
    />
    <!-- <div class='w-full h-full rounded-lg overflow-hidden'>
      <YouTube
        title=''
        videoId='BatOZZcAFFM'
      />
    </div> -->
  </div>
  <div>
    <h1 class='text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter'>Comprehensive Laser Engraving Software Solution</h1>
    <p class='text-lg mt-4 text-slate-600 max-w-xl'>
      <b>MarkingMate</b> is a professional laser engraving control software, supporting both 2D and 3D versions to meet engraving needs on a wide variety of materials and surfaces. With an intuitive interface, advanced technology, and flexible compatibility,
      MarkingMate helps you achieve maximum efficiency in laser processing.
    </p>
    <div class='mt-6 flex flex-col sm:flex-row gap-3'>
      <Link
        href='#'
        href='https://web3templates.com/templates/astroship-starter-website-template-for-astro'
        target='_blank'
        class='flex gap-1 items-center justify-center'
        rel='noopener'>
        <Icon
          class='text-white w-5 h-5'
          name='bx:message-square-detail'
        />
        &nbsp;Contact Us
      </Link>
      <Link
        size='lg'
        style='outline'
        rel='noopener'
        href='https://github.com/surjithctly/astroship'
        class='flex gap-1 items-center justify-center'
        target='_blank'>
        <Icon
          class='text-black w-4 h-4'
          name='bx:right-arrow-alt'
        />
        &nbsp;Learn more
      </Link>
    </div>
  </div>
</main>
